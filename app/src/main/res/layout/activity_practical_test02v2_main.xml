<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for the user to type a word -->
    <EditText
        android:id="@+id/wordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a word"
        android:inputType="text" />

    <!-- Button to send the request to the server -->
    <Button
        android:id="@+id/defineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Definition"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- TextView to display the retrieved definition -->
    <TextView
        android:id="@+id/definitionOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definition will appear here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="16dp"
        android:gravity="center_horizontal" />

</LinearLayout>